{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "zig build",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build_Test",
            "type": "shell",
            "command": "$outdir=zig test tests/tests.zig --pkg-begin zigimg zigimg.zig --pkg-end --enable-cache; mkdir -Force zig-cache/tests; cp \"$outdir\\test.exe\" -Destination \"zig-cache/tests\"",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run tests",
            "type": "shell",
            "command": "zig build test",
            "problemMatcher": "$gcc"
        }
    ]
}